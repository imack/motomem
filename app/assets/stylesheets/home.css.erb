* {
  font-family: museo, Verdana, Arial, sans-serif;
}

body {
  font-family: museo, Verdana, Arial, sans-serif;
}

@font-face {
    font-family: museo;
    src: url(<%= asset_path 'Museo.otf' %>);
}

@font-face {
    font-family: museoSlab;
    src: url(<%= asset_path 'MuseoSlab.otf' %>);
}

@font-face {
    font-family: marketingScript;
    src: url(<%= asset_path 'MarketingScript.ttf' %>);
}

@font-face {
  font-family: londrina;
  src: url(<%= asset_path 'LondrinaSolid.otf' %>);
}

.callout {
  font-family: londrina, Verdana, Arial, sans-serif;
  font-weight: 500;
  font-size: 48px;
  color: #E08574;
  text-align: center;
  border-bottom: 4px solid #E08574;
  padding-bottom: 10px;
  margin-bottom: 30px;
}

.logo {
  text-align: center;
}

.action {
  text-align: center;
  font-size: 18px;
  margin-top: 5px;
  margin-bottom: 20px;
}

.overview {
  text-align: center;
  padding-bottom: 5px;
}

.welcome {
  font-size: 24px;
}
.username {
  color: #E08574;
}

.instructions {
  margin-top: 10px;
}

.instructions p {
  padding:0px;
  margin: 0px;
  margin-bottom: 10px;
}

.delete {
  margin-top: 50px;
  font-size: 18px;
}

.motomem {
  max-width: 200px;
  float:left;
  margin: 5px 0px;
}

.highlight {
  font-weight: 800;
}